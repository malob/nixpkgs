{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git show:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(nix build:*)",
      "Bash(nix flake:*)",
      "Bash(nix eval:*)",
      "Bash(nix develop:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue list:*)"
    ]
  },
  "enabledPlugins": {
    "plugin-dev@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "nix-lsp@malos-plugins": true,
    "json-lsp@malos-plugins": true
  },
  "extraKnownMarketplaces": {
    "malos-plugins": {
      "source": {
        "source": "directory",
        "path": "/Users/malo/.config/nixpkgs/configs/claude/plugins"
      }
    }
  },
  "additionalDirectories": [
    "~/.config/nixpkgs"
  ]
}
